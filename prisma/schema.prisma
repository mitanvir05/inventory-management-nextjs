generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?
  sku         String?  @unique
  price       Decimal  @db.Decimal(12, 2)
  quantity    Int      @default(0)
  lowStockAt  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}
